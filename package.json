{
  "name": "smartprice-backend",
  "version": "1.0.0",
  "description": "SmartPrice Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:setup": "node -e \"require('child_process').execSync('psql -U postgres -f src/database/schema.sql', {stdio: 'inherit'})\"",
    "db:migrate": "ts-node src/database/runMigration.ts",
    "db:backup": "bash scripts/backup-db.sh",
    "db:restore": "bash scripts/restore-db.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:load": "k6 run src/__tests__/performance/load-test.js",
    "test:stress": "k6 run src/__tests__/performance/stress-test.js",
    "test:spike": "k6 run src/__tests__/performance/spike-test.js",
    "security:check": "node scripts/check-security.js",
    "security:generate-secrets": "node scripts/generate-secrets.js",
    "health:check": "bash scripts/health-check.sh",
    "audit": "npm audit --production",
    "docker:build": "docker build -t smartprice-backend .",
    "docker:run": "docker run -p 3001:3001 --env-file .env smartprice-backend"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/schema": "^10.0.31",
    "@types/archiver": "^7.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bull": "^3.15.9",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/node-cache": "^4.1.3",
    "@types/nodemailer": "^7.0.10",
    "@types/pg": "^8.10.9",
    "@types/qrcode": "^1.5.6",
    "@types/socket.io": "^3.0.1",
    "@types/speakeasy": "^2.0.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.18.1",
    "archiver": "^7.0.1",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "graphql": "^16.12.0",
    "graphql-http": "^1.22.4",
    "graphql-subscriptions": "^3.0.0",
    "graphql-ws": "^6.0.7",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "nodemailer": "^8.0.1",
    "pg": "^8.11.3",
    "qrcode": "^1.5.4",
    "redis": "^4.6.11",
    "socket.io": "^4.8.3",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.3.3",
    "winston": "^3.19.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "playwright": "^1.58.2",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node-dev": "^2.0.0"
  }
}
